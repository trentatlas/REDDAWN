- CONFIGURE /opt/ISO/rhel-10.1-x86_64-dvd.iso /REPO
   - vi /etc/fstab
     /opt/ISO/rhel-10.1-x86_64-dvd.iso       /REPO   iso9660 ro 0 0
   - mkdir -p /REPO
   - systemctl daemon-reload 
   - mount -a
   - df -h /REPO

